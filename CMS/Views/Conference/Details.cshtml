@model CMS.CMS.Common.ViewModels.ConferenceDetailsViewModel

@{
    ViewBag.Title = "Details";
}
@using Newtonsoft.Json

<h2>@ViewBag.Title</h2>

<div>
    <button id="renderJoinConference" class="btn btn-default">Join conference</button>
    <div id="partialJoinConference" style="display:none">
        @{
            Html.RenderAction("JoinConference", "Conference", new { Model.Id });
        }
    </div>

    <hr />

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        @*<dt>
                @Html.DisplayNameFor(model => model.ChairId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ChairId)
            </dd>*@

        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AbstractPaperDeadline)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AbstractPaperDeadline)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProposalPaperDeadline)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProposalPaperDeadline)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BiddingDeadline)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BiddingDeadline)
        </dd>
    </dl>

    <div>
        @Html.ActionLink("Edit", "UpdateConference", "Conference", new { Model.Id }, new { @class = "btn btn-info" })
        <button id="displayTags" class="btn btn-info">Add sessions</button>
        <div style="margin: 0px auto; display:none;" id="tagsDiv">
            <input name="sessions" id="input-tags" class="form-control" />
            <button id="saveSessions" class="btn btn-success">Save</button>
        </div>
    </div>

    <div>
        @Html.ActionLink("Submit paper", "Add", "Submission", new { Model.Id }, new { @class = "btn btn-primary" })
    </div>
    <div>
        @Html.ActionLink("View submitted papers", "Submissions", "Submission", new { ConferenceID = Model.Id }, new { @class = "btn btn-primary" })
    </div>
</div>
<hr />

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery-tagsinput/1.3.6/jquery.tagsinput.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-tagsinput/1.3.6/jquery.tagsinput.min.js"></script>

    <script type="text/javascript">

        $('#saveSessions').click(function () {

            var $tagWords = $('#input-tags').siblings(".tagsinput").children(".tag");
            var tags = new Array();
            var model = @Html.Raw(JsonConvert.SerializeObject(this.Model));
            tags.push(model.Id);
            for (var i = $tagWords.length; i--;) {
                tags.push($($tagWords[i]).text().substring(0, $($tagWords[i]).text().length - 1).trim());
            }
            
            var uniqueTags = $.unique(tags);
            var postData = { sessions: uniqueTags };

            $.ajax({
                type: "POST",
                url: "http://localhost:51271/Conference/AddSessions", 
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(postData),
                dataType: "json",
                complete: function (data) {
                    $('.tagsinput .tag').remove();
                    $('#input-tags input').val('');
                    $('#tagsDiv').hide();
                }
            });
        });

        $('#input-tags').tagsInput();

        $('#displayTags').click(function () {
            $('#tagsDiv').show();
        });

        $('#renderPartialPaper').click(function () {
            $('#partialUploadPaper').show();
        });

        $('#renderPartialAbstract').click(function () {
            $('#partialUploadAbstract').show();
        });

        $('#renderJoinConference').click(function () {
            $('#partialJoinConference').show();
        });

        $(document).ready(function () {
            var model = @Html.Raw(JsonConvert.SerializeObject(this.Model));
            var today = new Date();
            console.log(today.toJSON());
            console.log(model.BiddingDeadline);
            if (model.BiddingDeadline < today.toJSON()) {
                document.getElementById("renderPartialPaper").disabled = true;
                document.getElementById("renderPartialAbstract").disabled = true;
            }
        });
    </script>
}

