@model CMS.CMS.Common.ViewModels.JoinPCViewModel

<hr />
@using (@Html.BeginForm("FormJoinPC", "Conference", FormMethod.Post, new { @id = "form1" }))
{
<div class="form-horizontal" style="margin-top: 15px">
    @Html.HiddenFor(x => x.ConferenceId, new { Id = "Id" })
    <div class="form-group">
        @Html.Label("Chair", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.RadioButtonFor(model => model.Role, "Chair")
            </div>
        </div>
    <div class="form-group">
        @Html.Label("Co-Chair", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.RadioButtonFor(model => model.Role, "CoChair")
            </div>
        </div>
    <div class="form-group">
        @Html.Label("Default", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.RadioButtonFor(model => model.Role, "Default")
            </div>
    </div>
    <input type="submit" name="submit" value="Submit" class="btn btn-default" />
</div>
}
