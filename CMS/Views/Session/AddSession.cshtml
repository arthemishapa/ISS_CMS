@model CMS.CMS.Common.ViewModels.SessionViewModel

@{
    ViewBag.Title = "Add Session";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("AddSession", "Session"))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(x => x.ConferenceId, new { Id = "ConferenceId" })

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ChairId)
        @Html.DropDownListFor(
            m => m.ChairId,
            new SelectList(
                Model.Users,
                "Id",
                "Name"
                ),
            "",
            new
            {
                @class = "form-control"
            }
        )
        @Html.ValidationMessageFor(m => m.ChairId, "", new { @class = "text-danger" })
    </div>

    <div class="text-danger">
        @ViewBag.ErrorMessage
    </div>

    <button type="submit" class="btn btn-success">Add</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}